extends ./templates/base.jade

append vars
  - var title = 'Insights'

block header
  +header('insights')

block content
  .container
    section
      header.insights--discover-title.section-header
        h3 Discover Insights
        a.section-header-link(href='#') advanced search
      .insights--search-container
        input.insights--search-input(placeholder='Search topics and places')
        a.insights--search-submit.button.button-large Search
    section
      header.section-header
        h3 Featured insights
        // <a href="#" class="section-header-link">View More <i class="fa fa-angle-right"></i></a>
      .insights--featured
        a.hero-link-wrap(href='map.html')
        .insights--featured-title
          .insights--featured-sub-title
            | Featured insight
          a(href='map.html')
            | Are countries whose water supplies are most at risk from climate change taking action?
        .insights--featured-info
          .insights--featured-info-source
            img(src='img/avatar-wri.png')
            span
              | by
              a(href='#') World Resources Institute
          .insights--featured-info-stars
            svg.icon.icon-star
              use(xlink:href='#icon-star')
            span 6,578
      include ./templates/insight_cards.jade

    section
      header.section-header
        h3 Insight collections
      .gridbox
        include ./templates/card.jade
        +card('category')(
          url='insights-collection.html',
          thumbnail='img/collection-1-th.jpg',
