{{#if topic}}
  <div class="container">
    <header class="section-header dashboard">
      <h1 class="story--title">{{{country}}} dashboard</h1>

      <a href="#" id="countryToggleBtn" class="section-header-link aligned-bottom is-mobile-hidden">Change country</a>
      <a href="#" id="topicsToggleBtn" class="section-header-link aligned-bottom is-mobile-hidden">Topics</a>
      <a id="fullscreenBtn" class="section-header-link aligned-bottom is-mobile-hidden">Full screen</a>
    </header>
    <!-- country selector -->
    <section>
      <div class="m-country-selector dashboard is-hidden" id="countryToggle">
        <div class="country-selector">
          <select  class="choose-country">
            <option value="" disabled selected>Choose country</option>
            {{#each countries}}
            <option value="{{iso}}" {{#is iso ../iso}}selected{{/is}}>{{name}}</option>
            {{/each}}
          </select>
          <input class="button is-mobile-hidden" type="submit" value="Let's go!">
          <input class="button is-desktop-hidden" type="submit" value="Go!">
        </div>
      </div>
      <div class="m-country-selector dashboard is-hidden" id="topicsToggle">

        <div class="m-topic">
          <div class="m-topic--item">
            <div class="m-topic--thumb">
              <a href="dashboard-topic.html"><img src="" alt=""></a>
            </div>
            <div class="m-topic--caption">
              <a href="dashboard-topic.html">Title</a>
            </div>
          </div>

          <div class="m-topic--item">
            <div class="m-topic--thumb">
              <img src="" alt="">
            </div>
            <div class="m-topic--caption">
              <p>Title</p>
            </div>
          </div>

          <div class="m-topic--item">
            <div class="m-topic--thumb">
              <img src="" alt="">
            </div>
            <div class="m-topic--caption">
              <p>Title</p>
            </div>
          </div>

          <div class="m-topic--item">
            <div class="m-topic--thumb">
              <img src="" alt="">
            </div>
            <div class="m-topic--caption">
              <p>Title</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  {{!-- HERE --}}
