  .container

    // insights by wwf
    section
      header.section-header
        h3 Explore
      .gridbox
        include ./templates/card.jade
        +card('insight')(
          url='insights-story.html',
          thumbnail='img/partner-wwf-insight-1.jpg',
          sub_title='Story',
          title='Worldwide Forest Loss in Summer 2015',
          avatar='img/avatar-wwf.png',
          author='WWF',
          star_count='6,574'
        )
        +card('insight')(
          url='insights-map.html',
          thumbnail='img/partner-wwf-insight-2.jpg',
          sub_title='Map',
          title='The Most Polluted Rivers in the United States',
          avatar='img/avatar-wwf.png',
          author='WWF',
          star_count='6,574'
        )
        +card('insight')(
          url='insights-story.html',
          thumbnail='img/partner-wwf-insight-3.jpg',
          sub_title='Story',
          title='How Train Transport Will Improve our Lives',
          avatar='img/avatar-wwf.png',
          author='WWF',
          star_count='6,574',
          star_active=true
        )
        +card('insight')(
          url='insights-slideshow.html',
          thumbnail='img/partner-wwf-insight-4.jpg',
          sub_title='Slideshow',
          title='Worldwide Forest Loss in 2015',
          avatar='img/avatar-wwf.png',
          author='WWF',
          star_count='6,574',
          star_active=true
