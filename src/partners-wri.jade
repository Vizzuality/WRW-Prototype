  .container
    // insights by wri
    section
      header.section-header
        h3 Explore
      .gridbox
        include ./templates/card.jade
        +card('insight')(
          url='insights-interactive-edi.html',
          thumbnail='img/insight-38-th.jpg',
          sub_title='Interactive',
          title='A factory is being built in your neighborhood. Can you do anything about it?',
          avatar='img/avatar-wri.png',
          author='World Resources Institute',
          author_url='partners-wri.html',
          star_count='1,349'
        )
        +card('insight')(
          url='insights-slideshow-peru.html',
          thumbnail='img/insight-40-th.jpg',
          sub_title='Slideshow',
          title='The Water Guardians of the Andes',
          author='World Resources Institute',
          author_url='partners-wri.html',
          avatar='img/avatar-wri.png',
          star_count='3,249'
        )
        +card('insight')(
          url='insights-interactive-map.html',
          thumbnail='img/insight-39-th.jpg',
          sub_title='Interactive',
          title='Farms to feel squeeze as competition for water increases',
          avatar='img/avatar-wri.png',
          author='World Resources Institute',
          author_url='partners-wri.html',
          star_count='6,574',
          star_active=true
        )
        +card('insight')(
          url='insights-story.html',
          thumbnail='img/insight-21-th.jpg',
          sub_title='Story',
          title='Zooming In: “Sustainable” Cocoa Producer Destroys Pristine Forest in Peru',
          avatar='img/avatar-wri.png',
          author='World Resources Institute',
          author_url='partners-wri.html',
          star_count='6,574',
          star_active=true
        )
        +card('insight')(
          url='#',
          thumbnail='img/insight-23-th.jpg',
          sub_title='Map',
          title='Climate change will increase chance of people being affected by floods',
          avatar='img/avatar-wri.png',
          author='World Resources Institute',
          author_url='partners-wri.html',
          star_count='6,574'
        )
        +card('insight')(
          url='#',
          thumbnail='img/partner-wri-insight-6.jpg',
          sub_title='Slideshow',
          title='Global Forest Landscape Restoration Target Set, National Contributions Announced',
          avatar='img/avatar-wri.png',
          author='World Resources Institute',
          star_count='430'
        )


  // jumbotron "help us save the arctic"
  .partners--middle
    .partners--container
      .middle--intro <strong>WRI</strong> is a global research organization that turns big ideas into action  at the nexus of environment, economic opportunity and human well-being.
      a.button.button-large(href='http://www.wri.org/' target="_blank") Learn About Our Work


  .container
    // collections
    section
      header.section-header
        h3 Collections
      .gridbox
        include ./templates/card.jade
        +card('category')(
          url='insights-collection.html',
          thumbnail='img/collection-7-th.jpg',
          title='Worldwide Deforestation'
          )
        +card('category')(
          url='insights-collection.html',
          thumbnail='img/collection-2-th.jpg',
          title='Rainforest Observatory'
          )
        +card('category')(
          url='insights-collection.html',
          thumbnail='img/collection-3-th.jpg',
          title='Biodiversity Observatory 2015'
          )

    // data updated by wri
    section
      header.section-header
        h3 Data updated by World Resources Institute
        a.section-header-link(href='#')
          | View More
          i.fa.fa-angle-right
      .gridbox
        include ./templates/card.jade
        +card('data')(
          url='explore-standalone.html#4',
          thumbnail='img/data-explore-4-th.png',
          title='Aqueduct: global water risk projections ',
          download_csv=true,
          download_map=true,
          sub_title='World Resources Institute'
          star_count='5,001',
          star_active=true
        )
        +card('data')(
          url='explore-standalone.html#5',
          thumbnail='img/data-explore-5-th.png',
          title='CAIT: GHG emissions by country ',
          download_csv=true,
          sub_title='World Resources Institute'
          star_count='1,003'
        )
        +card('data')(
          url='explore-standalone.html#6',
          thumbnail='img/data-explore-6-th.png',
          title='CAIT: socioeconomic data',
          download_csv=true,
          sub_title='World Resources Institute'
          star_count='1,000'
        )
        +card('data')(
          url='explore-standalone.html#7',
          thumbnail='img/data-explore-7-th.png',
          title='Environmental democracy index ',
          download_csv=true,
          download_map=true,
          sub_title='World Resources Institute'
          star_count='5,001'
        )
