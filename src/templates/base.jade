block vars
  - var className = 'is-default'
  - var title = null
  - var path = env == 'development' ? '' : '/WRW-prototype/'

doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title= (title ? title + ' | ' : '') + 'Resource Watch'
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:300,400,700')
    link(rel='stylesheet', href='http://libs.cartocdn.com/cartodb.js/v3/3.13/themes/css/cartodb.css')

    if env === 'production'
      link(rel='stylesheet', href='styles/main.css')
    else
      link(rel='stylesheet', href='bower_components/normalize-css/normalize.css')
      link(rel='stylesheet', href='bower_components/slick-carousel/slick/slick.css')
      link(rel='stylesheet', href='styles/main.css')

  body(class=(className || ''))
    //- The global SVG icons to include in every page
    include ./svg_icons.jade

    //- The global header
    include ./header.jade
    block header
      +header

    //- The main content
    #content
      block content

    //- The global footer
    block footer
      include ./footer.jade

    //- The global scripts to include in every page
    script(src="//cdnjs.cloudflare.com/ajax/libs/three.js/r61/three.min.js")
    script(src="http://libs.cartocdn.com/cartodb.js/v3/3.13/cartodb.js")
    block scripts
      if env == 'production'
        script(src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.20/require.js", data-main="scripts/main")
      else
        script(src='bower_components/requirejs/require.js')
        script(src="scripts/config.js")
        script(src="scripts/main.js")
