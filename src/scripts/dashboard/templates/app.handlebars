    <div class="container">
      {{topic}}
    </div>
  </div>

  <div class="container">
    <div class="gridbox">
      {{#times cardsCount}}
      <div class="cell">
        <div class="card dashboard card{{@index}}">
        </div>
      </div>
      {{/times}}
    </div>
  </div>
