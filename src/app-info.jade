extends ./templates/base.jade

append vars
  - var title = 'Track Deforestation In Real Time'

block content


  .container
    //description
    section
      header.section-header
        h3 Description

    // details
    section
      header.section-header
        h3 Details
      .container
        p.app-info--details
          | Requires iOS 6.0 or later. Compatible with iPhone, iPad, and iPod touch. This app is optimized for iPhone 5, iPhone 6, and iPhone 6 Plus.
          | Languages: English, Spanish, French, German, Russian



    // explore the data
    section
      header.section-header
        h3 Data used
        a.section-header-link(href='explore.html')
          | View More
          i.fa.fa-angle-right
      .gridbox
        include ./templates/card.jade
        +card('data')(
          url='explore-standalone.html',
          thumbnail='img/data-1-th.png',
          title='Water levels in Northern California',
          download_csv=true,
          download_map=true,
          sub_title='Centre for Research on Lorem'
          star_count='6,575'
        )
        +card('data')(
          url='explore-standalone.html',
          thumbnail='img/data-2-th.png',
          title='Total Greenhouse Emissions',
          download_csv=true,
          sub_title='Centre for Research on Lorem'
          star_count='6,575'
        )
        +card('data')(
          url='explore-standalone.html',
          thumbnail='img/data-3-th.png',
          title='CO2 emissions intensity',
          download_csv=true,
          download_map=true,
          sub_title='Centre for Research on Lorem'
          star_count='6,575'
        )

    // feature-apps
    section
      header.section-header
        h3 Similar apps
        a.section-header-link(href='#')
          | View More
          i.fa.fa-angle-right
      .gridbox
        include ./templates/card.jade
        +card('app')(
          url='#',
          thumbnail='img/app-1-th.jpg',
          title='Carbon Footprint Calculator',
          star_count='6,574',
          star_active=true
        )
        +card('app')(
          url='#',
          thumbnail='img/app-2-th.jpg',
          title='World Resources Watch AI',
          star_count='6,574'
        )
        +card('app')(
          url='#',
          thumbnail='img/app-3-th.jpg',
          title='Android Wearable Environmental Alerts',
          star_count='6,574'
        )

    // planet-pulse
    section
      header.section-header
        h3 Planet Pulse
        a.section-header-link(href='planet-pulse.html')
          | Launch
          i.fa.fa-angle-right
      .banner
        a(href='planet-pulse.html')
          img.banner-image(src='img/planet-pulse-1.png')
        h3.banner-header Real-time data monitoring the planet
        a.banner-button.button.button-large(href='planet-pulse.html') Launch Planet Pulse
