extends ./templates/base.jade

append vars
  - var title = 'Welcome'

block content
  // hero
  section.hero
    a.hero-link-wrap(href='insights-interactive-map.html')
    .hero-content
      .container
        .hero-title
          .hero-sub-title
            | Featured insight
          a(href='insights-interactive-map.html')
            | Farms to feel squeeze as competition for water increases
        .hero-info
          .hero-info-source
            img(src='img/insight-wwf-logo.png')
            span
              | by &nbsp;
              a(href="partners-wri.html") World Resources Institute
          .hero-info-stars.active
            svg.icon.icon-star
              use(xlink:href='#icon-star')
            span 6,574
  .container
    // country selector
    section
      .m-country-selector
        header
          h2 Country dashboards
          p Analyze country data easily
        .country-selector
          select.choose-country
            option(value='', disabled='', selected='') Choose country
          input.button.is-mobile-hidden(type='submit', value="Let's go!")
          input.button.is-desktop-hidden(type='submit', value='Go!')

    // feature-insights
    section
      header.section-header
        h3 Featured insights
        a.section-header-link(href='insights.html')
          | View More
          i.fa.fa-angle-right
      include ./templates/insight_cards.jade

    // planet-pulse
    section
      header.section-header
        h3 Planet Pulse
        a.section-header-link(href='planet-pulse.html')
          | Launch
          i.fa.fa-angle-right
      .banner
        a(href='planet-pulse.html')
          img.banner-image(src='img/planet-pulse-1.png')
        h3.banner-header Real-time data monitoring the planet
        a.banner-button.button.button-large(href='planet-pulse.html') Launch Planet Pulse
    // explore the data
    section
      header.section-header
        h3 Explore the data
        a.section-header-link(href='explore.html')
          | View More
          i.fa.fa-angle-right
      .gridbox.js-explore-datasets

    // feature-apps
    section
      header.section-header
        h3 Featured apps
        //- a.section-header-link(href='#')
        //-   | View More
        //-   i.fa.fa-angle-right
      .gridbox
        include ./templates/card.jade
        +card('app')(
          url='app-info.html',
          thumbnail='img/app-4-th.jpg',
          title='Track Deforestation in Real Time',
          star_count='1,325',
          star_active=true
        )
        +card('app')(
          url='#',
          thumbnail='img/app-5-th.jpg',
          title='Current and Future Water Security',
          star_count='6,332'
        )
        +card('app')(
          url='#',
          thumbnail='img/app-6-th.jpg',
          title='Flood Risk Analyzer',
          star_count='2,324'
        )
        +card('app')(
          url='#',
          thumbnail='img/app-7-th.jpg',
          title='Track Climate Change and Country Actions',
          star_count='4,572'
        )
        +card('app')(
          url='#',
          thumbnail='img/app-8-th.jpg',
          title='Index of Environmental Rights',
          star_count='5,439'
        )
        +card('app')(
          url='#',
          thumbnail='img/app-9-th.jpg',
          title='Resource Watch AI',
          star_count='6,332'
        )

    // app-develop
    section
      //- header.section-header
      //-   h3 Title?
      //-   a.section-header-link(href='#')
      //-     | Link?
      //-     i.fa.fa-angle-right
      .banner
        a(href='planet-pulse.html')
          img.banner-image(src='img/banner-2.jpg')
        h3.banner-header Awesome ideas? <br> Develop your own app
        a.banner-button.button.button-large(href='#') Learn More
